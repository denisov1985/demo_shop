{% extends 'base.html.twig' %}

{% block content %}
    <h2>Shopping cart</h2>

    <table class="table">
        <thead>
            <th width="10%">Product</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Total</th>
        </thead>
        <tbody>
            {% for product in order.products %}
                <tr>
                    <td>
                        <img width="100" height="100" src="/images/products/{{ product.imageName }}">
                    </td>
                    <td>{{ product.name }}</td>
                    <td><input type="text"></td>
                    <td>{{ product.price }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}